{
  "app-id": "re.sonny.Commit",
  "runtime": "org.gnome.Platform",
  "runtime-version": "41",
  "sdk": "org.gnome.Sdk",
  "command": "re.sonny.Commit",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--require-version=1.1.2",
    "--device=dri"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libsass",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/lazka/libsass.git",
          "branch": "meson"
        }
      ]
    },
    {
      "name": "sassc",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/lazka/sassc.git",
          "branch": "meson"
        }
      ]
    },
    {
      "name": "libadwaita",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
          "branch": "main"
        }
      ]
    },
    {
      "name": "Commit",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "dir",
          "path": "./"
        }
      ]
    }
  ]
}
